            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
          {t(lang, 'nav.github')}
        </a>
      </div>
    </nav>
  </header>

  <main>
    <!-- Hero -->
    <section class="min-h-screen flex items-center justify-center px-6 pt-16 relative overflow-hidden">
      <!-- Background layers -->
      <div class="absolute inset-0 hero-gradient"></div>
      <div class="absolute inset-0 hero-grid"></div>
      <div class="absolute inset-0 hero-noise opacity-[0.03]"></div>

      <!-- Mouse Follower with floating nodes -->
      <MouseFollower />

      <!-- Floating Orbs -->
      <div class="absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-violet-500/[0.07] rounded-full blur-[120px] animate-float"></div>
      <div class="absolute bottom-1/3 right-1/4 w-[400px] h-[400px] bg-cyan-500/[0.05] rounded-full blur-[100px] animate-float-delayed"></div>
      <div class="absolute top-1/2 right-1/3 w-[300px] h-[300px] bg-pink-500/[0.04] rounded-full blur-[80px] animate-float"></div>

      <div class="hero-content max-w-3xl mx-auto text-center relative z-10">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/[0.04] backdrop-blur-sm border border-white/[0.08] mb-8 animate-fade-in-up" style="animation-delay: 0.1s;">
          <span class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse shadow-[0_0_8px_rgba(52,211,153,0.6)]"></span>
          <span class="text-sm font-medium text-zinc-300">{t(lang, 'hero.badge')}</span>
        </div>
        <h1 class="text-5xl sm:text-6xl md:text-8xl font-black tracking-tight leading-[1.1] mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
          <span class="text-white">{t(lang, 'hero.title1')}</span>
          <span class="block bg-gradient-to-r from-violet-400 via-pink-400 to-cyan-400 bg-clip-text text-transparent glow-text">{t(lang, 'hero.title2')}</span>
        </h1>
        <p class="text-lg sm:text-xl text-zinc-400 mb-12 max-w-xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.3s;">
          {t(lang, 'hero.description')}
        </p>
        <div class="flex flex-col gap-4 items-center animate-fade-in-up" style="animation-delay: 0.4s;">
          <a href="/download" class="group inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-violet-600 to-cyan-600 text-white rounded-xl font-semibold hover:from-violet-500 hover:to-cyan-500 transition-all shadow-lg shadow-violet-500/25 hover:shadow-xl hover:shadow-violet-500/30 hover:-translate-y-0.5 whitespace-nowrap">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            {t(lang, 'download.heroButton')}
            <span class="inline-block group-hover:translate-x-1 transition-transform">&rarr;</span>
          </a>
          <div class="flex flex-wrap gap-3 justify-center">
            <a href="https://app.aituber-flow.dev" target="_blank" rel="noopener" class="group inline-flex items-center gap-2 px-5 py-2.5 bg-white/[0.04] backdrop-blur-sm border border-white/[0.08] text-zinc-300 rounded-lg text-sm font-medium hover:bg-white/[0.08] hover:border-white/[0.12] transition-all hover:-translate-y-0.5 whitespace-nowrap">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9"/>
              </svg>
              {t(lang, 'hero.cta')}
            </a>
            <a href="https://discord.gg/RazS3JsTmn" target="_blank" rel="noopener" class="group inline-flex items-center gap-2 px-5 py-2.5 bg-indigo-500/10 backdrop-blur-sm border border-indigo-500/20 text-indigo-300 rounded-lg text-sm font-medium hover:bg-indigo-500/20 hover:border-indigo-500/30 transition-all hover:-translate-y-0.5 whitespace-nowrap">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.37a19.791 19.791 0 00-4.885-1.515.074.074 0 00-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 00-5.487 0 12.64 12.64 0 00-.617-1.25.077.077 0 00-.079-.037A19.736 19.736 0 003.677 4.37a.07.07 0 00-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 00.031.057 19.9 19.9 0 005.993 3.03.078.078 0 00.084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 00-.041-.106 13.107 13.107 0 01-1.872-.892.077.077 0 01-.008-.128 10.2 10.2 0 00.372-.292.074.074 0 01.077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 01.078.01c.12.098.246.198.373.292a.077.077 0 01-.006.127 12.299 12.299 0 01-1.873.892.077.077 0 00-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 00.084.028 19.839 19.839 0 006.002-3.03.077.077 0 00.032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 00-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
              </svg>
              {t(lang, 'hero.discord')}
            </a>
            <a href="https://github.com/oboroge0/AITuberFlow" target="_blank" rel="noopener" class="group inline-flex items-center gap-2 px-5 py-2.5 bg-white/[0.04] backdrop-blur-sm border border-white/[0.08] text-zinc-300 rounded-lg text-sm font-medium hover:bg-white/[0.08] hover:border-white/[0.12] transition-all hover:-translate-y-0.5 whitespace-nowrap">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
              {t(lang, 'hero.github')}
            </a>
          </div>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </section>

    <!-- Features -->
    <section class="py-32 px-6 relative">
      <div class="section-divider absolute top-0 left-0 right-0"></div>
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16" data-animate="fade-up">
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
            {t(lang, 'features.title')}
          </h2>
          <p class="text-zinc-500 text-lg max-w-xl mx-auto">
            {t(lang, 'features.subtitle')}
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6" data-animate-stagger data-animate="fade-up">
          <!-- Feature 1 -->
          <div class="group neon-card p-6 rounded-2xl relative overflow-hidden transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:shadow-emerald-500/[0.05]">
            <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/[0.05] to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative">
              <div class="w-12 h-12 rounded-xl bg-emerald-500/10 border border-emerald-500/20 flex items-center justify-center mb-4 group-hover:scale-110 group-hover:shadow-[0_0_20px_rgba(16,185,129,0.15)] transition-all">
                <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2 text-white">{t(lang, 'features.workflow.title')}</h3>
              <p class="text-zinc-400 leading-relaxed">
                {t(lang, 'features.workflow.description')}
              </p>
            </div>
          </div>

          <!-- Feature 2 -->
          <div class="group neon-card p-6 rounded-2xl relative overflow-hidden transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:shadow-violet-500/[0.05]">
            <div class="absolute inset-0 bg-gradient-to-br from-violet-500/[0.05] to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative">
              <div class="w-12 h-12 rounded-xl bg-violet-500/10 border border-violet-500/20 flex items-center justify-center mb-4 group-hover:scale-110 group-hover:shadow-[0_0_20px_rgba(139,92,246,0.15)] transition-all">
                <svg class="w-6 h-6 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2 text-white">{t(lang, 'features.platform.title')}</h3>
              <p class="text-zinc-400 leading-relaxed">
                {t(lang, 'features.platform.description')}
              </p>
            </div>
          </div>

          <!-- Feature 3 -->
          <div class="group neon-card p-6 rounded-2xl relative overflow-hidden transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:shadow-pink-500/[0.05]">
            <div class="absolute inset-0 bg-gradient-to-br from-pink-500/[0.05] to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative">
              <div class="w-12 h-12 rounded-xl bg-pink-500/10 border border-pink-500/20 flex items-center justify-center mb-4 group-hover:scale-110 group-hover:shadow-[0_0_20px_rgba(236,72,153,0.15)] transition-all">
                <svg class="w-6 h-6 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2 text-white">{t(lang, 'features.avatar.title')}</h3>
              <p class="text-zinc-400 leading-relaxed">
                {t(lang, 'features.avatar.description')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How it Works -->
    <section class="py-32 px-6 relative overflow-hidden">
      <div class="section-divider absolute top-0 left-0 right-0"></div>

      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16" data-animate="fade-up">
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
            {t(lang, 'howItWorks.title')}
          </h2>
          <p class="text-zinc-500 text-lg max-w-xl mx-auto">
            {t(lang, 'howItWorks.subtitle')}
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-12 relative">
          <!-- Connection line -->
          <div class="hidden md:block absolute top-8 left-[20%] right-[20%] h-px bg-gradient-to-r from-emerald-500/50 via-violet-500/50 to-pink-500/50 progress-line" data-animate="fade-in"></div>

          <div class="text-center relative" data-animate="fade-up" data-delay="0">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-emerald-500 to-emerald-600 flex items-center justify-center mx-auto mb-6 text-2xl font-bold text-white shadow-lg shadow-emerald-500/30 relative z-10">
              1
            </div>
            <h3 class="text-xl font-semibold mb-3 text-white">{t(lang, 'howItWorks.step1.title')}</h3>
            <p class="text-zinc-400">
              {t(lang, 'howItWorks.step1.description')}
            </p>
          </div>

          <div class="text-center relative" data-animate="fade-up" data-delay="150">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-violet-500 to-violet-600 flex items-center justify-center mx-auto mb-6 text-2xl font-bold text-white shadow-lg shadow-violet-500/30 relative z-10">
              2
            </div>
            <h3 class="text-xl font-semibold mb-3 text-white">{t(lang, 'howItWorks.step2.title')}</h3>
            <p class="text-zinc-400">
              {t(lang, 'howItWorks.step2.description')}
            </p>
          </div>

          <div class="text-center relative" data-animate="fade-up" data-delay="300">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-pink-500 to-pink-600 flex items-center justify-center mx-auto mb-6 text-2xl font-bold text-white shadow-lg shadow-pink-500/30 relative z-10">
              3
            </div>
            <h3 class="text-xl font-semibold mb-3 text-white">{t(lang, 'howItWorks.step3.title')}</h3>
            <p class="text-zinc-400">
              {t(lang, 'howItWorks.step3.description')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Demo -->
    <section class="py-32 px-6 relative overflow-hidden">
      <div class="section-divider absolute top-0 left-0 right-0"></div>
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16" data-animate="fade-up">
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
            {t(lang, 'demo.title')}
          </h2>
          <p class="text-zinc-500 text-lg max-w-xl mx-auto">
            {t(lang, 'demo.subtitle')}
          </p>
        </div>

        <!-- Animated Demo Flow -->
        <div class="relative max-w-4xl mx-auto" data-animate="fade-up">
          <div class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-4">
            <!-- Step 1: Chat Input -->
            <div class="demo-node group p-6 rounded-2xl bg-white/[0.03] border-2 border-emerald-500/20 relative min-w-[200px] hover:border-emerald-500/40 transition-colors">
              <div class="absolute -top-3 left-4 px-2 py-0.5 bg-emerald-500 text-white text-xs rounded-full font-medium">Input</div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-emerald-500/10 flex items-center justify-center">
                  <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                </div>
                <span class="font-medium text-zinc-200">{t(lang, 'demo.step1')}</span>
              </div>
              <div class="demo-pulse absolute inset-0 rounded-2xl border-2 border-emerald-400/50 opacity-0 animate-demo-pulse"></div>
            </div>

            <!-- Arrow -->
            <div class="hidden md:block">
              <svg class="w-8 h-8 text-zinc-600 animate-flow-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
